<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_helpcenter_viewholder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@drawable/main_background"
    android:orientation="vertical">

    <EditText
        android:id="@+id/et_helpcenter_helpone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="12sp"
        android:textColor="@color/via"
        android:drawableEnd="@drawable/arrow_right_up"
        android:text="@string/helpcenter_categoryname"
        android:background="@drawable/outlined_edittext"
        android:editable="false"/>

    <EditText
        android:id="@+id/et_helpcenter_helptwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="12sp"
        android:visibility="gone"
        android:textColor="@color/via"
        android:text="@string/helpcenter_categoryname"
        android:background="@drawable/outlined_edittext"
        android:editable="false"/>
</LinearLayout>